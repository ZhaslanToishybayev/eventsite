server {
    listen 80;
    listen [::]:80;
    server_name fan-club.kz www.fan-club.kz;

    # Перенаправление всего трафика с HTTP на HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name fan-club.kz www.fan-club.kz;

    # SSL сертификаты (самоподписанные)
    ssl_certificate /var/www/myapp/eventsite/cert.pem;
    ssl_certificate_key /var/www/myapp/eventsite/key.pem;

    # Дополнительные SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # Статические файлы
    location /static/ {
        alias /var/www/myapp/eventsite/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Django приложение - проксируем на HTTPS Django сервер
    location / {
        proxy_pass https://127.0.0.1:8443;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_ssl_verify off;  # Отключаем проверку SSL сертификата
    }
}
